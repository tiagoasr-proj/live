@model GerenciadorLives.Models.Inscricoes

@{
    ViewData["Title"] = "Excluir";
}
<h1>Excluir Inscrição</h1>

<h3>Tem certeza que deseja excluir o registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StatusPagamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusPagamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorInscricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorInscricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Inscrito)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Inscrito.InscritoId)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Live)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Live.LiveId)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="InscricaoId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Listar</a>
    </form>
</div>
